{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],

    "paths": {
      "@/*": ["./src/*"]
    },

    "module": "node20",
    "moduleResolution": "node16",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
